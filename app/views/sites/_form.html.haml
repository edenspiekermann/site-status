= form_for(@site) do |f| 
  - if @site.errors.any? 
    #error_explanation
      %h2
        = pluralize(@site.errors.count, "error") 
        prohibited this site from being saved:

      %ul
      -@site.errors.full_messages.each do |msg|
        %li
          = msg

  .field
    = f.label :name 
    %br
    = f.text_field :name
  .field
    = f.label :url
    %br
    = f.text_field :url
  .actions
    = f.submit
